<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="system.resource">
       
       <select id="query" parameterType="ActionValues" resultType="Resource">
            select * from sys_resource_info
            <trim prefix="where" prefixOverrides="and|or">
                <if test="null!=id">
                    id=${id}
                </if>
                <if test="null!=name">
                    and name=#{name}
                </if>
                <if test="null!=title">
                    and title=#{title}
                </if>
            </trim>
       </select>
       
       <insert id="toInsert" parameterType="ActionValues">
           insert into sys_resource_info(id,name,title) values(0,#{name},#{title})
       </insert>
       
       <update id="toUpdate" parameterType="ActionValues">
          <if test="null!=id">
               update sys_resource_info
               <set>
                   <if test="null!=name">
                        name=#{name}
                   </if>
                    <if test="null!=name&&null!=title">
                        ,
                    </if>
                    <if test="null!=title">
                        title=#{title}
                    </if>
               </set>
               where id=#{id}
          </if>
       </update>
       
       <delete id="toDelete" parameterType="ActionValues">
          <if test="null!=id">
               delete from sys_resource_info where id=#{id}
          </if>
       </delete>
       
</mapper> 
