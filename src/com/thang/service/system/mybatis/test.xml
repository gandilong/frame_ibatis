<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="system.test">
       
       <select id="query" parameterType="ActionValues" resultType="DataValues">
       
            select * from test
            <where>
                <if test="null!=id">
                   id=#{id}
                </if>
                <if test="null!=name">
                    name=#{name}
                </if>
            </where>
       
       </select>
       
</mapper> 
