<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="system.user">
       
       <select id="login" parameterType="ActionValues"  resultType="DataValues">
            select * from sys_user_info where login_name=#{loginName} and login_pass=#{loginPass} and used=1;
       </select>
       
       <select id="query" parameterType="ActionValues" resultType="DataValues">
            select * from sys_user_info
            <trim prefix="where" prefixOverrides="and|or">
                <if test="null!=id">
                    id=${id}
                </if>
                <if test="null!=userName">
                    and user_name like '%#{userName}%'
                </if>
                <if test="null!=loginName">
                    and login_name=#{loginName}
                </if>
                <if test="null!=used">
                    and used=#{used}
                </if>
                <if test="null!=email">
                    and email=#{email}
                </if>
                <if test="null!=startTime">
                    and create_time>=#{startTime}
                </if>
                <if test="null!=endTime">
                    and create_time <![CDATA[ <= ]]>#{endTime}
                </if>
            </trim>
       </select>
       
       <insert id="toInsert" parameterType="ActionValues">
           insert into sys_user_info(id,user_name,login_name,login_pass,create_time,email) values(0,#{userName},#{loginName},#{loginPass},#{createTime},#{email})
       </insert>
       
       <update id="toUpdate" parameterType="ActionValues">
          <if test="null!=id">
               update sys_user_info
               <set>
                   <if test="null!=userName">
                        user_name=#{userName},
                   </if>
                    <if test="null!=loginName">
                        login_name=#{loginName},
                    </if>
                    <if test="null!=loginPass">
                        login_pass=#{loginPass},
                    </if>
                    <if test="null!=email">
                        email=#{email},
                    </if>
                    <if test="null!=used">
                        used=#{used}
                    </if>
               </set>
               where id=#{id}
          </if>
       </update>
       
       <delete id="toDelete" parameterType="long">
          <if test="null!=id">
               delete from sys_user_info where id=#{id}
          </if>
       </delete>
       
       <delete id="toDeletes" parameterType="ActionValues">
          <if test="null!=ids">
            delete from sys_user_info where id in
            <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">  
               #{id}  
            </foreach>  
          </if>
       </delete>
       
</mapper> 
