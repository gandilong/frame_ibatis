<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="system.user">
       
       <select id="login" parameterType="ActionValues" resultType="User">
            select * from sys_user_info where login_name=#{login_name} and login_pass=#{login_pass}
       </select>
       
       <select id="query" parameterType="ActionValues" resultType="User">
            select * from sys_user_info
            <trim prefix="where" prefixOverrides="and|or">
                <if test="null!=id">
                    id=${id}
                </if>
                <if test="null!=user_name">
                    and user_name=#{user_name}
                </if>
                <if test="null!=login_name">
                    and login_name=#{login_name}
                </if>
            </trim>
       </select>
       
       <insert id="toInsert" parameterType="ActionValues">
           insert into sys_user_info(id,user_name,login_name,login_pass,create_time) values(0,#{user_name},#{login_name},#{login_pass},#{create_time})
       </insert>
       
       <update id="toUpdate" parameterType="ActionValues">
          <if test="null!=id">
               update sys_user_info
               <set>
                   <if test="null!=user_name">
                        user_name=#{user_name},
                   </if>
                    <if test="null!=login_name">
                        login_name=#{login_name},
                    </if>
                    <if test="null!=login_pass">
                        login_pass=#{login_pass},
                    </if>
                    <if test="null!=create_time">
                        create_time=#{create_time}
                    </if>
               </set>
               where id=#{id}
          </if>
       </update>
       
       <delete id="toDelete" parameterType="ActionValues">
          <if test="null!=id">
               delete from sys_user_info where id=#{id}
          </if>
       </delete>
       
</mapper> 
