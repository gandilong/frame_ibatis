<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="system.user">
       
       <select id="login" parameterType="ActionValues" resultType="com.thang.entity.system.User">
            select * from sys_user_info where login_name=#{login_name} and login_pass=#{login_pass}
       </select>
       
</mapper> 
