<?xml version="1.0" encoding="UTF-8"?>
<definitions 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.omg.org/spec/BPMN/20100524/MODEL 
                    http://www.omg.org/spec/BPMN/2.0/20100501/BPMN20.xsd">
  
  
  <process id="vacation" name="vacationprocess">
      <startEvent id="start"/>
      
      <sequenceFlow id="start_create" sourceRef="start" targetRef=""/>
      
      <userTask id="createVacation" name="createVacation">
          <documentation>
              Write a vacation apply
          </documentation> 
          <potentialOwner> 
              <resourceAssignmentExpression> 
                <formalExpression>accountancy</formalExpression> 
              </resourceAssignmentExpression> 
          </potentialOwner> 
      </userTask>
      
      <sequenceFlow id='create_verify' sourceRef="create" targetRef='verify' /> 
 
      <userTask id="verify" name="verifyVacation" > 
          <documentation> 
              Verify monthly financial report composed by the accountancy department. 
              This financial report is going to be sent to all the company shareholders. 
          </documentation> 
          <potentialOwner> 
             <resourceAssignmentExpression> 
               <formalExpression>management</formalExpression> 
             </resourceAssignmentExpression> 
          </potentialOwner> 
      </userTask> 
 
      <sequenceFlow id='verify_end' sourceRef='verify' targetRef='end' /> 
 
      <endEvent id="end" /> 
      
  </process>

</definitions>